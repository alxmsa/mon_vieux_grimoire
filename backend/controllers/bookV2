const Book = require('../models/Book');
const sharp = require('sharp');
const fs = require ('fs');
const path = require('path');

exports.createBook = (req, res) => {
  try {
    const bookObject = JSON.parse(req.body.book);
    delete bookObject._id;
    delete bookObject._userId;

    const originalFilename = req.file.filename.split('.')[0];
    const optimizedFilename = `optimized_${originalFilename}.webp`;
    const inputPath = `images/${req.file.filename}`;
    const outputPath = `images/${optimizedFilename}`;

    console.log('ğŸ“ Fichier reÃ§u (multer) :', req.file);

    sharp(inputPath)
      .resize({ width: 800 })
      .webp({ quality: 70 })
      .toFile(outputPath)
      .then(() => {
        console.log('âœ… Conversion SHARP exÃ©cutÃ©e vers :', outputPath);

        // Supprimer lâ€™image originale
        fs.unlink(inputPath, (err) => {
          if (err) {
            console.warn('âš ï¸ Impossible de supprimer lâ€™image originale :', err);
          }
        });

        const book = new Book({
          ...bookObject,
          userId: req.auth.userId,
          imageUrl: `${req.protocol}://${req.get('host')}/images/${optimizedFilename}`,
        });

        book.save()
          .then(() => {
            console.log('ğŸ“š Livre enregistrÃ© avec succÃ¨s !');
            res.status(201).json({ message: 'Livre enregistrÃ© !' });
          })
          .catch((error) => {
            console.error('âŒ Erreur lors de la sauvegarde du livre :', error);
            res.status(400).json({ error });
          });
      })
      .catch((err) => {
        console.error('âŒ Erreur SHARP :', err.message);
        res.status(500).json({ message: 'Erreur lors du traitement de lâ€™image.', error: err.message });
      });

  } catch (error) {
    console.error('âŒ Erreur parsing ou structure JSON :', error.message);
    res.status(400).json({ message: 'DonnÃ©es du livre invalides.', error: error.message });
  }
};

exports.modifyBook = (req, res) => {
  Book.updateOne({ _id: req.params.id }, { ...req.body, _id: req.params.id })
    .then(() => res.status(200).json({ message: 'Livre modifiÃ© !' }))
    .catch((error) => res.status(400).json({ error }));
};

exports.deleteBook = (req, res) => {
  Book.deleteOne({ _id: req.params.id })
    .then(() => res.status(200).json({ message: 'Livre supprimÃ© !' }))
    .catch((error) => res.status(400).json({ error }));
};

exports.getOneBook = (req, res) => {
  Book.findOne({ _id: req.params.id })
    .then((book) => res.status(200).json(book))
    .catch((error) => res.status(404).json({ error }));
};

exports.getAllBooks = (req, res) => {
  Book.find()
    .then((books) => res.status(200).json(books))
    .catch((error) => res.status(400).json({ error }));
};

exports.rateBook = (req, res) => {
  const { rating } = req.body; // La note envoyÃ©e par l'utilisateur (ex: { "rating": 4 })
  const userId = req.auth.userId; // L'utilisateur connectÃ© qui note le livre

  Book.findOne({ _id: req.params.id })
    .then((book) => {
      if (!book) {
        return res.status(404).json({ message: 'Livre non trouvÃ© !' });
      }

      // VÃ©rifier si l'utilisateur a dÃ©jÃ  notÃ© ce livre
      const existingRating = book.ratings.find(r => r.userId === userId);
      if (existingRating) {
        return res.status(400).json({ message: 'Vous avez dÃ©jÃ  notÃ© ce livre.' });
      }

      // Ajouter la nouvelle note dans le tableau `ratings`
      book.ratings.push({ userId, grade: rating });

      // Recalculer `averageRating`
      const totalRatings = book.ratings.length;
      const sumRatings = book.ratings.reduce((sum, r) => sum + r.grade, 0);
      book.averageRating = (sumRatings / totalRatings).toFixed(1); // Arrondi Ã  1 dÃ©cimale

      // Sauvegarder les modifications
      book.save()
        .then(() => res.status(200).json(book))
        .catch((error) => res.status(400).json({ error }));
    })
    .catch((error) => res.status(500).json({ error }));
};

exports.bestBooks = (req, res) => {
  Book.find()
    .sort({ averageRating: -1 })
    // ğŸ”¹ Trie par `averageRating` en ordre dÃ©croissant (du + grand au + petit)
    .limit(3) // ğŸ”¹ Garde seulement les 3 premiers rÃ©sultats
    .then((books) => res.status(200).json(books)) // ğŸ”¹ Renvoie les livres sous forme JSON
    .catch((error) => res.status(400).json({ error }));
};
